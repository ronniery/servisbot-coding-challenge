{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev:debug"
      ],
      "envFile": "${workspaceFolder}/apps/backend/.env",
      "cwd": "${workspaceFolder}/apps/backend",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "outputCapture": "std"
    }
  ]
}